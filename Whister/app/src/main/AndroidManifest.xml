<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.UnicornStudio.whiter.app" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.ImpressionWall"
            android:label="@string/title_activity_impression_wall" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.Portfolio"
            android:label="@string/title_activity_portfolio" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.PhotoIntentActivity"
            android:label="@string/title_activity_photo_intent" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.ImageFilter"
            android:label="@string/title_activity_image_filter" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.Whister"
            android:label="@string/title_activity_user_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.Signin"
            android:label="@string/title_activity_signin" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.Likelist"
            android:label="@string/title_activity_likelist" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.ViewImage"
            android:label="@string/title_activity_view_image" >
        </activity>
        <activity
            android:name="com.UnicornStudio.whiter.app.Controller.PersonalInformation"
            android:label="@string/title_activity_personal_information" >
        </activity>
    </application>

</manifest>
